%h1 Listing locations

=form_tag locations_path, :method => :get do
  %p
    .field.row.large-8
      =text_field_tag :search, params[:search]
      =submit_tag "Search Near", :name => nil, class: "button raidus round"

%table
  %tr
    %th.large-8 Address
    %th Latitude
    %th Longitude
    %th
    %th
    %th

  - @locations.each do |location|
    %tr
      %td= location.address
      %td= location.latitude
      %td= location.longitude
      %td= link_to 'Show', location
      %td= link_to 'Edit', edit_location_path(location)
      %td= link_to 'Destroy', location, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br
  = link_to 'New Location', new_location_path, class: "button raidus round"
